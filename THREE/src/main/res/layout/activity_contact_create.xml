<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AccountName：">
        </TextView>
        <EditText
                android:id="@+id/contact_create_account_name_et"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"></EditText>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="AccountType："></TextView>
        <EditText
                android:id="@+id/contact_create_account_type_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="name："></TextView>
        <EditText
                android:id="@+id/contact_create_name_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="MobilePhone："></TextView>
        <EditText
                android:id="@+id/contact_create_mobile_phone_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <Button
            android:id="@+id/contact_create_go_btn"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/contact_create_go_btn_str"></Button>

    <TextView
            android:id="@+id/contact_create_result_tv"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"></TextView>
</LinearLayout>