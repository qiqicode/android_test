<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    <TextView
            android:editable="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/intent_label1">
    </TextView>

    <EditText
            android:id="@+id/textfield"
            android:maxLines="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    </EditText>

    <Button
            android:id="@+id/go_easy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_easy">
    </Button>

    <Button
            android:id="@+id/go_results"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/go_results">

    </Button>
</LinearLayout>